<h1>Listing ideas</h1>
<h2>Add a new idea</h2>
<% if @idea.errors %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_tag ideas_path, remote: true do %>
  <label for="desc">Description:</label>
  <input type="text" id="desc" name="desc" value="<%= @idea.desc %>">
  <input type="submit">
<% end %>

<table>
  <tr>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>
  <% @ideas.each do |idea|  %>
    <tr id="idea_<%= idea.id %>">
      <td><%= idea.desc %></td>
      <td><%= link_to 'Show', idea_path(idea.id)  %></td>
      <td><%= link_to 'Edit', edit_idea_path(idea.id) %></td>
      <td><%= link_to 'Destroy', idea_path(idea.id), :method => :delete, :remote => true  %></td>
    </tr>
  <% end %>
</table>
